$porfolio-text-color = rgba(#000, 0.7)

:local(.container)
  .app-sidebar 
    color $porfolio-text-color
  .ui-button
    color $porfolio-text-color
    border-color $porfolio-text-color
    min-width 200px
    text-align left
    display flex
    align-items center
    position relative
    .btn-text
      flex 1
    .btn-icon
      text-align right

  .portfolio-item-details
    padding-top 50px
    padding-left 120px
    height 50vh
    background-color #ddd
    color $porfolio-text-color
  
  
  .portfolio-item-image
    will-change transform
    transform scale(1)
    transform-origin center center
    transition transform 0.1s ease-out
    width 600px
    height 300px
    position absolute
    left 50%
    top 50%
    margin-left -300px
    margin-top -150px
    box-shadow 0px 25px 50px 0 rgba(#000, 0.3)

  .portfolio-title
    font-weight $font-weight-bolder
    font-size 24px
    letter-spacing 0.13px
    line-height 32px

  .portfolio-description
    margin-top 30px
    font-size 18px
  
  .demo-links
    margin-top 20px
    font-size 18px

  .case-study-button
    margin-top 30px

  .demo-link
    &:not(:first-child)
      margin-left 50px
      position relative
      &:after
        position absolute
        content '.'
        left -25px
