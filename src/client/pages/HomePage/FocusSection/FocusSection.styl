:local(.container)
  display flex
  flex-direction column 
  align-items center
  justify-content center
  .focus-list
    width 100%

  .focus-item
    display inline-flex
    align-items center
    justify-content center
    cursor pointer
    margin 60px 0
    letter-spacing 0.6px
    font-weight $font-weight-bold
    line-height 51px
    font-size 14px
    color #000
    opacity 1
    transition opacity $time-2x ease
  
  .focus-item
    width 33%
    +tablet()
      width 50%
    +mobile()
      width 100%

  .focus-text
    position relative
    min-width 160px
    &:after, &:before 
      content ''
      position absolute
      left 0
      height 1px
      width 14px
      background-color #000
      transition top $time-1x ease, bottom $time-1x ease
    &:before
      top -61px
    &:after
      bottom -60px
    
    &:hover
      &:before
        top -31px
      &:after
        bottom -30px
    



