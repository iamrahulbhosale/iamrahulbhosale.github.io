:local(.container)
  display flex
  flex-direction column
  justify-content center
  
  &.page-section.thanks-section
    padding-bottom 50px
    padding-top 50px
  .thanks-content, .thanks-inner
    flex 1
    display flex 
    flex-direction column
    justify-content center
    position relative
  

  .thanks-title 
    font-weight $font-weight-bolder
    font-size 80px
    line-height 63px
    letter-spacing 0.64px
    text-align left
    color #fff
    margin-bottom 10px
  
  .thanks-sub-text
    font-size 24px
    color #fff
    opacity 0.3
    margin-bottom 60px
    position relative
    &:after
      position absolute
      left 0
      bottom -50px
      width 500px
      max-width 60vw
      height 1px
      content ''
      background-color #fff
  
  .thanks-heart
    color #ff4848
    font-size 40px
    margin-left 4px

  

  .social-icons
    margin-top 50px
  .social-icon
    margin-right 50px
    margin-bottom 50px
    display inline-block
    opacity 0.4
    padding: 2px;
    transition opacity 0.3s ease , transform 0.3s ease
    transform scale(1)
    transform-origin center center 
    path[fill='#FFF']
      fill $dark
    &:hover
      path[fill='#FFF']
        fill #000
    &.is-active, &:hover
      opacity 1
      transform scale(1.3)
  
  +mobile()
    .thanks-title 
      font-size 48px
    .thanks-subtitle
      font-size 18px
    .thanks-heart
      font-size 16px
    .social-icons
      display flex
      align-items center
      justify-content space-between
    .social-icon
      margin-right 0px


  .social-link
    width 30px
    height 30px
    background-color #fff
    border-radius 50%
    display flex
    align-items center
    justify-content center
    svg
      position relative
      z-index 1
      width 16px 
      height 16px
    
    
:local(.container)
  .location-container
    display flex
    position absolute
    left 40px
    bottom 0
  
  .location-details
    margin-left 30px
    display flex
    flex-direction column
  .location-label
    font-size 14px
    line-height 18px
    flex 1
    color #777777
  .location-value 
    font-size 24px
    line-height 31px
    position relative
  .location-emoji
    position absolute
    right -24px

  +mobile()
    .location-details
      margin-left 20px
    .location-emoji
      right 10px
