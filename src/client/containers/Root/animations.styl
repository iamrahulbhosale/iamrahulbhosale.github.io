@keyframes fadeInDownShort
  from
    transform opacity(0) translate3d(0, -40px, 0)

  to
    transform opacity(1) translate3d(0, 0px, 0)


@keyframes waving-hand 
  0%
    transform rotate(0deg) translate3d(0px, 0, 0)
  8%
    transform rotate(6deg) translate3d(1px, 0, 0)
  20%
    transform rotate(0deg) translate3d(0px, 0, 0)
  28%
    transform rotate(-6deg) translate3d(-1px, 0, 0)
  40%
    transform rotate(0deg) translate3d(0px, 0, 0)
  30%
    transform rotate(6deg) translate3d(1px, 0, 0)
  60%
    transform rotate(0deg) translate3d(0px, 0, 0)
  68%
    transform rotate(-6deg) translate3d(-1px, 0, 0)
  60%
    transform rotate(0deg) translate3d(0px, 0, 0)
  100%
    transform rotate(0deg) translate3d(0px, 0, 0)


@keyframes growing-fading-circle 
  0%
    opacity 0 
    transform scale(1)
  40%
    opacity 1
    transform scale(1.2)
  80%
    opacity 0.5
    transform scale(1.3)
  to
    opacity 0
    transform scale(1.4)


@keyframes text-travels-x
  0%
    transform translate3d(100%, 0px, 0px)
  100%
    transform translate3d(calc(0% - 100vw), 0px, 0px)
  // 100%
  //   transform translate3d(-100%, 0px, 0px)


@keyframes rotate-colors
  0%
    color #FF5454
  25%
    color #FFE068
  50%
    color #54CEFF
  75% 
    color #E77CFF
  100%
    color #FF5454
