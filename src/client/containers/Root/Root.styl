// add utilities
normalize-css()
border-box-html()

html, body
  width 100vw
  min-height 100vh

body
  background-color $body-bg
  color $dark
  font-size $font-size-base
  font-family $font-family-stack
  line-height $line-height-base

#root 
  min-height 100vh

a
  color inherit
  text-decoration none

h2
  typography_h2()

h3
  typography_h3()

p
  typography_p()

.white-box
  background-color #fff
  box-shadow 0px 10px 40px 0 $shadow-color

.svg-icon-img
  max-width 100%
  vertical-align middle

+html5-inputs()
  padding 12px 10px
  outline none
  border 1px $border-color solid
  color inherit
  font-weight inherit
  transition all 0.2s ease

  +placeholder()
    font-weight $font-weight-normal
    opacity 0.5

