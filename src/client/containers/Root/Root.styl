// add utilities
normalize-css()
border-box-html()

html, body
  width 100vw
  min-height 100vh

body
  background-color $body-bg
  color $dark
  font-size $font-size-base
  font-family $font-family-stack
  line-height $line-height-base
  letter-spacing 0.96px
  font-weight $font-weight-base
  &.is-offline
    filter grayscale(1)

#root 
  min-height 100vh

a
  color inherit
  text-decoration none



@import './animations'
@import './helpers'
