$button-bg ?= $body-bg
$button-border-radius ?= 32px
$button-pad-y ?= 10px
$button-pad-x ?= 32px
$button-shadow-color ?= $shadow-color
$button-border-color ?= $light
$button-text-color ?= #666


:local(.container)
  padding $button-pad-y $button-pad-x
  outline none
  color $button-text-color
  border 1px $button-border-color solid
  border-radius $button-border-radius
  background-color $button-bg
  letter-spacing 0.5px
  font-weight $font-weight-bold
  font-size 14px
  line-height 17px
  transition all 0.32s ease

  &:hover:not(.is-link)
    box-shadow 0px 6px 20px 0 $button-shadow-color

  &.is-outline
    border-color $button-border-color

  &.is-primary
    border-color $primary
    background-color $primary
    color #fff

    &.is-outline
      $clr = @background-color
      border-color $clr
      background-color transparent
      color $clr

      &:hover
        background-color $clr
        color #fff
  &.is-light
    border-color $light

  &.is-link
    padding-right 0
    padding-left 0
    border-color transparent
    background-color transparent

  &.is-rect
    border-radius 3px

  &.is-sharp
    border-radius 0

  &.is-lg
    height 60px
    
  &.is-medium
    height 50px
  
