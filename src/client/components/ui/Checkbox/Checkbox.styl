:local(.container)
  position relative
  cursor pointer

  .ui-checkbox-label
    position relative
    padding-left 30px
    letter-spacing 1px
    font-weight $font-weight-medium

    &:after, &:before
      position absolute
      left 0
      content ''

    &:after
      border 1px $border-color solid
      background-color $inactive-color
      square 20px 3px

    &:before
      z-index 1
      width 10px
      height 6px
      border-width 0 0 2px 2px
      border-style solid
      border-color $primary
      opacity 0
      transition all 0.24s ease
      transform translate3d(5px, 6px, 0) rotateZ(-45deg) scale(0.5)
      transform-origin center center

  .ui-checkbox-input
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    z-index 1
    width 100%
    height 100%
    opacity 0
    cursor pointer

    &:focus + .ui-checkbox-label 
      &:after
        box-shadow 0 0 0px 3px rgba($primary, 0.5)

    &:checked + .ui-checkbox-label
      &:after
        border-color $primary
        background-color $primary

      &:before
        opacity 1
        border-color #fff
        transform translate3d(5px, 6px, 0) rotateZ(-45deg) scale(1)
